{% extends 'base.html.twig' %}

{% block title pin.title %}

{% block body %}

    <article>

        <h1> {{ pin.title }}</h1>
        <p> {{ pin.description }}</p>
    </article>



    <a href="{{ path('app_edit' , {id: pin.id}) }}"> Edit ! </a>
    <a href="#" onclick="event.preventDefault(); confirm('Are you sure deleted project ?') && document.getElementById('js-delete-form').submit()"> Delete project ! </a>


    <form id="js-delete-form"  action="{{ path('app_delete' , {id: pin.id}) }}" method="post" style="display: none;">

        <input type="hidden" name="csf-token-security" value="{{ csrf_token('pin.deletion' ~ pin.id) }}"  >
        <input type="hidden" name="_method" value="DELETE"  >

    </form>

{% endblock %}